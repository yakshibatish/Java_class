public class SquarePattern {
    public static void main(String[] args) {
        int size = 3;

        for (int i = 0; i < size; i++) {         // rows
            for (int j = 0; j < size; j++) {     // columns
                System.out.print("#");
            }
            System.out.println();                // move to next line
        }
    }
}
